@model List<LeagueManager.Models.PlayerModel>

<table data-order='[[ 2, "desc" ]]' data-page-length='50' id="playersTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        
        <tr style="background-color:#3D195B; color:#FFF">
            <th>
                Name
            </th>
            <th>
                Team
            </th>
            <th>
                Score
            </th>
            <th>
                Bench Score
            </th>
            <th>
                Transfers Made
            </th>
            <th>
                Transfers Cost
            </th>
            <th>Chips</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr style="background-color:whitesmoke">
            <td>
                @item.PlayerName
            </td>
            <td>
                @item.Team
            </td>
            <td>
                @item.Score
            </td>
            <td>
                @item.BenchScore
            </td>
            <td>
                @item.Transfers
            </td>
            <td>
                @item.PlayerTransfersCost
            </td>
            <td>
                @(item.ChipsUsed != null ? item.ChipsUsed : " ")
            </td>
        </tr>
        }
    </tbody>
</table>

<script>
$(document).ready(function() {
    $('#playersTable').DataTable({
        paging: false
    });
} );
</script>